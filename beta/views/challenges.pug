html
    head
        title= title
        link(rel='stylesheet', href='/style/aftertrauma.css')
        meta( name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0' )
    body
        .container#container
            nav.titlebar
                button#back back
                h1= title
                button#add( data-type='challenge') +
            .list( data-sortable=true )
                each challenge in challenges
                    .list-item( data-type='challenge' data-id= challenge._id )
                        h2= challenge.name
                        .delete
                else 
                    .list-item
                        h2 no data
        script(src='/scripts/Sortable.js')
        script(src='/scripts/aftertrauma.js')
