html
    head
        title= title
        link(rel='stylesheet', href='/style/aftertrauma.css')
        meta( name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0' )
    body
        .container#container
            nav.titlebar
                button#back back
                h1= title
                button#add( data-category= category data-subcategory= subcategory ) +
            .list( data-sortable=true )
                each item in items
                    .list-item( data-type='item' data-category= item.category data-subcategory= item.subcategory data-id= item._id )
                        h2= item.title
                        .delete
                        .reorder
                else 
                    .list-item
                        h2 no data
        script(src='/scripts/Sortable.js')
        script(src='/scripts/aftertrauma.js')
